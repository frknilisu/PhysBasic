<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="#CDD0D4"
    tools:targetApi="lollipop">

    <!-- Note: <ripple> acts like a layer-list -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <!-- This color is not displayed in any way -->
            <solid android:color="@color/fragment_upgrade_button_color" />
        </shape>
    </item>

    <!-- This is the border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <!-- Use your border color in place of #f00 -->
            <stroke
                android:width="2dp"
                android:color="@color/fragment_upgrade_button_color"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
        </shape>
    </item>
</ripple>